/* Medium Devices, Desktops */
@media only screen and (max-width : 992px) {
	.header-cont-number{
		a{
			font-size 26px
		}
	}
	.top-nav{
		ul{
			li{
				a{
					padding 10px 5px
					font-size 12px
				}
			}
		}
	} 
	.contact-phone-separator:after{
		width 5px
		height 5px
	}
	.main-nav{
		.container{
			padding 0px
		}
		ul{
			li{
				&:nth-child(8){
					flex 0 0 225px
				}
				a{
					font-size 10px
					font-weight 400
				}
			}
		}
	} 
	.content-left-select{
		ul{
			justify-content: center;
			flex-wrap wrap
			
		}
	}
